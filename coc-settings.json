{
    "languageserver": {
	"rust": {
	    "command": "rust-analyzer",
	    "filetypes": ["rust"],
	    "rootPatterns": ["Cargo.toml"]
	},
	"go": {
	    "command": "gopls",
	    "rootPatterns": ["go.mod"],
	    "trace.server": "verbose",
	    "filetypes": ["go"]
	},
	"ccls":{
	    "command": "ccls",
	    "filetypes": [
		"c",
		"cpp",
		"objc",
		"objcpp"
	    ],
	    "rootPatterns": [
		".ccls",
		"compile_commands.json",
		".vim/",
		".git/",
		".hg/"
	    ],
	    "initializationOptions": {
		"cache": {
		    "directory": "/tmp/ccls"
		}
	    }
	}
    },
    "rust-analyzer.checkOnSave.allTargets": false,
    "rust-analyzer.checkOnSave.overrideCommand": ["cross"]
}
